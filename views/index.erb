<h1>To Do List</h1>

<% @tasks.each do |task| %>
<li>
  <%= task.title %>
  <form action="/to-do/<%= task.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete">
  </form>
  <form action="/to-do/<%= task.id %>/edit" method="get">
    <input type="submit" value="Edit">
  </form>
</li>
<% end %>

<br>

<a href="/to-do/new">Add Task</a>
